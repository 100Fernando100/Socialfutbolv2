# Ops-1 Automation Software - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# n8n Configuration
# =============================================================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_BASE_URL=http://localhost:5678

# n8n Basic Auth (for production, use more secure auth)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=ops1admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ops1_automation
POSTGRES_USER=ops1_user
POSTGRES_PASSWORD=your_secure_db_password_here

# Connection string format
DATABASE_URL=postgresql://ops1_user:your_secure_db_password_here@localhost:5432/ops1_automation

# =============================================================================
# Anthropic API (Claude)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Model configuration
ANTHROPIC_MODEL=claude-3-5-haiku-latest
ANTHROPIC_MAX_TOKENS=4096

# =============================================================================
# OpenAI API (for embeddings)
# =============================================================================
OPENAI_API_KEY=sk-xxxxx

# Embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Pinecone Configuration
# =============================================================================
PINECONE_API_KEY=xxxxx
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=ops1-production
PINECONE_HOST=ops1-production-xxxxx.svc.us-east-1.pinecone.io

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Secret for client authentication
JWT_SECRET=your_jwt_secret_here_min_32_chars

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# Data Retention Configuration
# =============================================================================
# Default retention period in days
DEFAULT_RETENTION_DAYS=365

# PIPEDA (Canada) retention
PIPEDA_RETENTION_DAYS=365

# GDPR retention (as per DPA)
GDPR_RETENTION_DAYS=180

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# Environment
# =============================================================================
NODE_ENV=development
