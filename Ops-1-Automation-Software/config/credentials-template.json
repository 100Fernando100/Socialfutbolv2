{
  "_comment": "n8n Credentials Template - Import these into n8n and update with real values",
  "credentials": [
    {
      "name": "Ops1 PostgreSQL",
      "type": "postgres",
      "data": {
        "host": "{{ POSTGRES_HOST }}",
        "database": "{{ POSTGRES_DB }}",
        "user": "{{ POSTGRES_USER }}",
        "password": "{{ POSTGRES_PASSWORD }}",
        "port": 5432,
        "ssl": false
      }
    },
    {
      "name": "Anthropic API Key",
      "type": "httpHeaderAuth",
      "data": {
        "name": "x-api-key",
        "value": "{{ ANTHROPIC_API_KEY }}"
      }
    },
    {
      "name": "OpenAI API Key",
      "type": "httpHeaderAuth",
      "data": {
        "name": "Authorization",
        "value": "Bearer {{ OPENAI_API_KEY }}"
      }
    },
    {
      "name": "Pinecone API Key",
      "type": "httpHeaderAuth",
      "data": {
        "name": "Api-Key",
        "value": "{{ PINECONE_API_KEY }}"
      }
    }
  ]
}
